{% extends 'base.html.twig' %}

{% block title %}News | Reunion{% endblock %}

{% block body %}
<div class="container">

    <div class="row mt-5 text-light text-center">
        <div class="col">
        <div class="card text-center"  style="background: #415461;">
        <div class="card-body">
          <h5 class="card-title">{{reunion.title}}</h5>
          <hr class="mt-3 mb-3 p-1"/>
          <p class="card-text text-left">{{reunion.content}}</p>
          <p class="card-text"><small class="text-info">Date de publication : {{reunion.createdAt|date("d/m/Y")}}</small></p>
        </div>
        </div>

      </div>
    </div>
</div>
{% endblock %}
